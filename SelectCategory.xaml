<Window x:Class="NoteApp.SelectCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteApp"
        mc:Ignorable="d"
        Title="SelectCategory" Height="300" Width="150" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <ComboBox Name="cbGenre" Height="20" VerticalAlignment="Top" SelectionChanged="cbGenre_SelectionChanged" />
        <ListBox Name="lbCategory" Margin="0,20,0,20" />
        <Button x:Name="btOK" Content="OK" Width="40" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,50,0" Click="btOK_Click" />
        <Button x:Name="btCancel" Content="Cancel" Width="40" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,0" Click="btCancel_Click" />
    </Grid>
</Window>
